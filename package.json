{
  "name": "vant-next-components",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite --config ./build/base.config.js",
    "build:doc": "vite build --config ./build/doc.config.js",
    "build:lib": "vite build --config ./build/lib.config.js",
    "release": "release-it && git push --follow-tags origin main"
  },
  "peerDependencies": {
    "@vueuse/core": "^8.2.0",
    "vant": "^4.0.0-alpha.1",
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@highlightjs/vue-plugin": "^2.1.0",
    "@vant/touch-emulator": "^1.3.2",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vitejs/plugin-vue-jsx": "^1.3.8",
    "@vueuse/core": "^8.2.0",
    "highlight.js": "^11.4.0",
    "less": "^4.1.2",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.12",
    "vant": "^4.0.0-alpha.1",
    "vite": "^2.9.1",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-md": "^0.11.7",
    "vue": "^3.2.31",
    "vue-router": "^4.0.14"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "push": false,
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    }
  }
}
